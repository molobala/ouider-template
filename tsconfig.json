{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "downlevelIteration": false,
        "moduleResolution": "bundler",
        "baseUrl": ".",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
        
    },
    "include": [
        "**/*.js",
        "**/*.ts",
        "**/*"
    ]
}